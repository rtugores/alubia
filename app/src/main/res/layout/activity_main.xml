<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_main"
    android:orientation="vertical"
    android:padding="@dimen/side_margin"
    android:weightSum="5">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/very_light_gray_transparent"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="@string/home_title"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/schedule_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/d_button_alubia"
        android:text="@string/home_schedule"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/complex_image_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/d_button_alubia"
        android:text="@string/album_title"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/forum_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/d_button_alubia"
        android:text="@string/home_forum"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/news_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/d_button_alubia"
        android:text="@string/home_news"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <Button
        android:id="@+id/more_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:background="@drawable/d_button_alubia"
        android:text="@string/home_more"
        android:textColor="@color/white"
        android:textStyle="bold" />

</LinearLayout>
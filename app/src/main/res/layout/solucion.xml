<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_nuevo"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Respuestas_texto"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="40dip"
        android:background="@drawable/d_back"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/solucion"
        android:textSize="28sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Solucion_texto"
        android:layout_width="326dp"
        android:layout_height="0dp"
        android:layout_marginLeft="30dip"
        android:layout_marginRight="30dip"
        android:layout_weight="1"
        android:drawableLeft="@drawable/ic_launcher"
        android:drawablePadding="25dp"
        android:drawableStart="@drawable/ic_launcher"
        android:gravity="center_vertical"
        android:text="@string/solucion"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button_ini"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="40dip"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:background="@drawable/d_normal_button_green"
        android:text="@string/menu_inicio"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />


</LinearLayout>
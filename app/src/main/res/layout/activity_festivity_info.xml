<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:layout_marginTop="10dip"
        android:layout_weight="1.0"
        android:fillViewport="true"
        android:scrollbars="vertical">

        <TextView
            android:id="@+id/info_write"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/write_info"
            android:textSize="15sp" />
    </ScrollView>

    <Button
        android:id="@+id/button_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/d_normal_button_blue"
        android:text="@string/verMapa"
        android:textColor="@android:color/white"
        android:textStyle="bold" />

    <com.google.ads.AdView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-9645153779384738/4669268804"
        ads:loadAdOnCreate="true" />

</LinearLayout>